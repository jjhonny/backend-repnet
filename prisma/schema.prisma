generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// criar uma migration: yarn prisma migrate dev
model User {
  id String @id @default(uuid())
  categoria Categoria
  shopname String
  cnpj String @unique
  email String @unique
  password String
  createAt DateTime @default(now())

  @@map("users")
}

enum Categoria {
  C // Cliente
  R // Representante
}